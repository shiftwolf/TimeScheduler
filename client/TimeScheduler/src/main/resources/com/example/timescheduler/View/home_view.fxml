<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.timescheduler.view.HomeView">
    <stylesheets><URL value="@homeStyles.css"/></stylesheets>

    <top>
        <HBox id="top-bar" minHeight="100">
            <padding><Insets top="40" right="30" bottom="40" left="30"/></padding>
            <Label id="view-title" text="Upcoming Events"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Button id="logout-button" text="Log Out" onAction="#onLogout" minHeight="35"/>
        </HBox>
    </top>

    <center>
        <GridPane vgap="20">
            <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="20" halignment="LEFT"/>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="20" halignment="RIGHT"/>
                <ColumnConstraints percentWidth="40"/>
            </columnConstraints>

            <ScrollPane fx:id="eventSection" maxWidth="Infinity"
                        GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3" GridPane.rowSpan="7">
                <GridPane.margin><Insets right="30"/></GridPane.margin>
            </ScrollPane>

            <Button text="Export Schedule" minHeight="35"
                    GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <Button text="Add Event" minHeight="35"
                    GridPane.columnIndex="2" GridPane.rowIndex="7">
                <GridPane.margin><Insets right="30"/></GridPane.margin>
            </Button>

            <Label id="title" text="Event Details"
                   GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
            <Label text="Name"
                   GridPane.columnIndex="3" GridPane.rowIndex="1">
                <GridPane.margin><Insets left="10"/></GridPane.margin>
            </Label>
            <Label text="Date"
                   GridPane.columnIndex="3" GridPane.rowIndex="2">
                <GridPane.margin><Insets left="10"/></GridPane.margin>
            </Label>
            <Label text="Duration"
                   GridPane.columnIndex="3" GridPane.rowIndex="3">
                <GridPane.margin><Insets left="10"/></GridPane.margin>
            </Label>
            <Label text="Location"
                   GridPane.columnIndex="3" GridPane.rowIndex="4">
                <GridPane.margin><Insets left="10"/></GridPane.margin>
            </Label>
            <Label text="Participants"
                   GridPane.columnIndex="3" GridPane.rowIndex="5">
                <GridPane.margin><Insets left="10"/></GridPane.margin>
            </Label>
            <Label text="Attachments"
                   GridPane.columnIndex="3" GridPane.rowIndex="6">
                <GridPane.margin><Insets left="10"/></GridPane.margin>
            </Label>

        </GridPane>
    </center>

</BorderPane>
