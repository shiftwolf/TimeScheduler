<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>

<fx:root type="javafx.scene.layout.GridPane" xmlns:fx="http://javafx.com/fxml" vgap="30">

    <columnConstraints>
        <ColumnConstraints percentWidth="40" />
        <ColumnConstraints percentWidth="60" halignment="RIGHT" />
    </columnConstraints>

    <Label id="title" text="Create a new event"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER_RIGHT" spacing="20">
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel"/>
        <Button fx:id="saveButton" text="Save" onAction="#onSave"/>
    </HBox>

    <Label text="Name"
           GridPane.columnIndex="0" GridPane.rowIndex="1">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <Label text="Date"
           GridPane.columnIndex="0" GridPane.rowIndex="2">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <Label text="Duration"
           GridPane.columnIndex="0" GridPane.rowIndex="3">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <Label text="Location"
           GridPane.columnIndex="0" GridPane.rowIndex="4">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <Label text="Participants"
           GridPane.columnIndex="0" GridPane.rowIndex="5">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <Label text="Attachments"
           GridPane.columnIndex="0" GridPane.rowIndex="6">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>

    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!--TODO: calender instead textfield. Separate time-->
    <TextField fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <TextField fx:id="durationField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <TextField fx:id="participantsField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <!--TODO: attachments-->

</fx:root>
