<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>

<fx:root type="javafx.scene.layout.GridPane" xmlns:fx="http://javafx.com/fxml" vgap="25">

    <columnConstraints>
        <ColumnConstraints percentWidth="19" />
        <ColumnConstraints percentWidth="28" />
        <ColumnConstraints percentWidth="6" />
        <ColumnConstraints percentWidth="15" />
        <ColumnConstraints percentWidth="32" />
    </columnConstraints>

    <Label id="title" text="Edit Event" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="4"
          alignment="CENTER_RIGHT" spacing="20">
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Save" onAction="#onSave"/>
    </HBox>


    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="4"/>

    <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <GridPane.margin><Insets right="30"/></GridPane.margin>
    </DatePicker>

    <Label text="Priority:" GridPane.columnIndex="3" GridPane.rowIndex="2">
        <GridPane.margin><Insets left="15"/></GridPane.margin>
    </Label>
    <ComboBox fx:id="priorityPicker" GridPane.columnIndex="4" GridPane.rowIndex="2">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Low" />
                <String fx:value="Medium" />
                <String fx:value="High" />
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Time:" GridPane.columnIndex="0" GridPane.rowIndex="3" >
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <ComboBox fx:id="timePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Duration:" GridPane.columnIndex="3" GridPane.rowIndex="3">
        <GridPane.margin><Insets left="15"/></GridPane.margin>
    </Label>
    <HBox GridPane.columnIndex="4" GridPane.rowIndex="3" GridPane.columnSpan="2" alignment="BASELINE_RIGHT">
        <ComboBox fx:id="durationHPicker" />
        <Label text="h">
            <HBox.margin><Insets left="3"/></HBox.margin>
        </Label>
        <Pane HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="durationMinPicker" />
        <Label text="min">
            <HBox.margin><Insets left="3"/></HBox.margin>
        </Label>
    </HBox>

    <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="4">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="4" />

    <Label text="Participants:" GridPane.columnIndex="0" GridPane.rowIndex="5">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <ScrollPane  GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="3" maxHeight="110">
        <VBox fx:id="participantsSection"/>
    </ScrollPane>
    <Button text="+" onAction="#onAddParticipant" GridPane.columnIndex="4" GridPane.rowIndex="5"
            GridPane.halignment="CENTER"/>

    <Label text="Attachments:" GridPane.columnIndex="0" GridPane.rowIndex="6">
        <GridPane.margin><Insets left="10"/></GridPane.margin>
    </Label>
    <ScrollPane  GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="3" maxHeight="110">
        <VBox fx:id="attachmentsSection"/>
    </ScrollPane>
    <Button text="+" onAction="#onAddAttachment" GridPane.columnIndex="4" GridPane.rowIndex="6"
            GridPane.halignment="CENTER"/>

</fx:root>
